datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Wallet {
  id         String    @id @default(cuid())
  account    String    @unique
  pubKey     String
  secretKey  String
  chainId    String
  networkId  String
  userId     String?
  user       User?     @relation(fields: [userId], references: [id])
  merchantId String?
  merchant   Merchant? @relation(fields: [merchantId], references: [id])
  createdAt  DateTime  @default(now())
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  Wallet    Wallet[]
}

model Merchant {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  Wallet    Wallet[]
}
